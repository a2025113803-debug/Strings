#include <iostream>
#include <string>
using namespace std;

bool esVocal(char c) {
    string v = "aeiouAEIOU";
    return v.find(c) != string::npos;
}

int main() {
    string texto;
    getline(cin, texto);

    int contador = 0;
    for (int i = 0; i < texto.size() - 1; i++)
        if (esVocal(texto[i]) && esVocal(texto[i+1]))
            contador++;

    cout << contador;
}
